<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#4E4D4D" />
            <corners
                android:bottomLeftRadius="@dimen/_12sdp"
                android:topLeftRadius="@dimen/_24sdp"
                android:topRightRadius="@dimen/_24sdp"
                android:bottomRightRadius="@dimen/_12sdp" />
        </shape>
    </item>

    <!-- Main Shape Layer (with Shadow Offset) -->
    <item android:bottom="2dp"> <!-- Adjust shadow offset as needed -->
        <shape android:shape="rectangle">
            <solid android:color="#E5E4E4" />
            <corners
                android:radius="@dimen/_8sdp"/>
        </shape>
    </item>
</layer-list>