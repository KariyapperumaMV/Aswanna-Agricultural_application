<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="#4E4D4D" />
            <corners
                android:bottomLeftRadius="@dimen/_24sdp"
                android:topRightRadius="@dimen/_24sdp"
                android:bottomRightRadius="@dimen/_24sdp" />
        </shape>
    </item>
    <!-- Shape -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#228C4C" />
            <corners
                android:bottomLeftRadius="@dimen/_14sdp"
                android:topRightRadius="@dimen/_14sdp"
                android:bottomRightRadius="@dimen/_14sdp" />
        </shape>
    </item>
</layer-list>
