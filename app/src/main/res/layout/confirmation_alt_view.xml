<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/message_backgroundmm"
    android:layout_margin="@dimen/_5sdp">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Accept Request  ?"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:padding="@dimen/_12sdp"
        android:text="This will  accept this  request  and assign an investor to your project."
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelbbb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_28ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:text="Cencel"
            android:textColor="@color/black"
            android:backgroundTint="#A8A1A1"/>

        <Button
            android:id="@+id/acceptbbb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15ssp"
            android:text="Accept"
            android:backgroundTint="@color/BtnColour"
            />
    </LinearLayout>

</LinearLayout>