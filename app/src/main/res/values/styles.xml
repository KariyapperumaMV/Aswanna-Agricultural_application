<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BlackText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom style for AlertDialog buttons -->
    <style name="CustomAlertDialogButton">
        <!-- Style for the "Submit" button -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greenappall</item>


    </style>


</resources>